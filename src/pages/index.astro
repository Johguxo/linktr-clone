---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Link from '../components/Link.astro';
---

<Layout title="Inscripcion vicaria">
	<main class="m-0 p-0">
		<div class="p-2 flex flex-col gap-5 px-4 m-auto w-auto max-w-screen-sm">
			<a href="https://www.instagram.com/vicariadelajuventudlima" target="_blank">
					<img 
					class="rounded-full" 
					alt="vicaria-img" 
					src="/banner.png"/>
			</a>
			<p class="text-center items-center font-bold">Formularios de Inscripcion</p>
		</div>
		<div class="flex flex-col gap-5 px-4 m-auto w-auto max-w-screen-sm">
			<Link href='https://www.facebook.com/' icon="fa fa-facebook" body='Parroquias'/>
			<Link href='https://www.facebook.com/' icon="fa fa-facebook" body='Colegios'/>
			<Link href='https://www.facebook.com/' icon="fa fa-facebook" body='Universidades'/>
		</div>
	</main>
</Layout>